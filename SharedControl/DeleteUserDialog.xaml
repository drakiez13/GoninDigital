<UserControl x:Class="GoninDigital.SharedControl.DeleteUserDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoninDigital.SharedControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Content="Reason" Margin="0 5 0 0"/>
            <TextBox x:Name="txb_Reason" Margin="0 5 0 0"/>
            <Label Content="End Date" Margin="0 10 0 0"/>
            <DatePicker x:Name="dp_EndDate" Width="275"></DatePicker>
            <TextBlock x:Name="Error"
                   Margin="0 10 0 0"/>
            <StackPanel Orientation="Horizontal"
                    Margin="0 30 0 0"
                    HorizontalAlignment="Center">
                <Button x:Name="btn_Add" 
                    Content="Delete"
                    Width="130"
                    Margin="0 0 5 0"
                    Click="btn_Add_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
