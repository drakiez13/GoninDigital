                </Button>

                <TextBlock Grid.Column="3"  VerticalAlignment="Center"
                           Text="total price"/>
                <Button Grid.Column="4">
                    <ui:AppBarButton HorizontalAlignment="Center" Icon="Delete" Margin="0,8,0,0" Width="58"/>
                </Button>
            </Grid>
        </StackPanel>
        
    </ScrollViewer>
</Page>
