               FontSize="22" 
               FontWeight="Bold"
               Margin="20 20 0 10" ></Label>
        <TabControl Grid.Row="1"
                    Margin="10 0 0 0"
                    Style="{StaticResource TabControlPivotStyle}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock>OK</TextBlock>
                </DataTemplate>
            </TabControl.ItemTemplate>
            <TabItem Header="Created">
                <ScrollViewer>
                    
                </ScrollViewer>

            </TabItem>
            <TabItem Header="Accepted">
                <ScrollViewer>
                    
                </ScrollViewer>
            </TabItem>

            <TabItem Header="Refused">
                <ScrollViewer>
                    
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Delivered">
                <ScrollViewer>
                    
                </ScrollViewer>
            </TabItem>
            <TabItem Header="Canceled">
                <ScrollViewer>
                    
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</ui:Page>
