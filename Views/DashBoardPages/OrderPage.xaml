<ui:Page x:Class="GoninDigital.Views.DashBoardPages.OrderPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:cm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource OrderPageVM}"
      Title="HotDealPage">
    <Page.Resources>
        <CollectionViewSource x:Key="L_Ordered"
                              Source="{Binding L_Order_Created}">
        </CollectionViewSource>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               Content="Purchase History" 
               FontSize="22" 
               FontWeight="Bold"
               Margin="20" ></Label>
        <TabControl  Grid.Row="1" Style="{StaticResource TabControlPivotStyle}" >
            <TabItem Header="Created" Width="160">
                <ScrollViewer>
                    <Grid>
                        <ListView x:Name="ltb_Created" HorizontalAlignment="Center" ItemsSource="{Binding Source={StaticResource L_Ordered}}" Visibility="{Binding FlagItem[0]}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:OrderCard
                            Image="{Binding Path=Image}"
                            VendorName="{Binding Path=VendorName}"
                            ProductName="{Binding Path=ProductName}"
                            BrandName="{Binding Path=BrandName}"
                            Quantity="{Binding Path=Quantity}"
                            PriceDisc="{Binding Path=PriceDisc}"
                            PriceOrg="{Binding Path=PriceOrg}"
                            TotalPrice="{Binding Path=TotalPrice}"
                            Status="{Binding Path=Status}"
                            Date="{Binding Path=Date}">
                                    </uc:OrderCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListView>
                        <Image  Height="200" Width="200" Source="{Binding Image}" Visibility="{Binding FlagImage}"></Image>
                    </Grid>
                </ScrollViewer>
               
            </TabItem>
            <TabItem Header="   Accepted" Width="160">
                <ScrollViewer>
                    <Grid>
                        <ListBox HorizontalAlignment="Center" ItemsSource="{Binding L_Order_Accepted}" Visibility="{Binding FlagItem1}"
                          SelectedItem="{Binding SelectedItem,Mode=OneWayToSource}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:OrderCard
                            Image="{Binding Path=Image}"
                            VendorName="{Binding Path=VendorName}"
                            ProductName="{Binding Path=ProductName}"
                            BrandName="{Binding Path=BrandName}"
                            Quantity="{Binding Path=Quantity}"
                            PriceDisc="{Binding Path=PriceDisc}"
                            PriceOrg="{Binding Path=PriceOrg}"
                            TotalPrice="{Binding Path=TotalPrice}"
                            Status="{Binding Path=Status}"
                            Date="{Binding Path=Date}">
                                    </uc:OrderCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListBox>
                        <Image Height="200" Width="200" Source="{Binding Image}" Visibility="{Binding FlagImage2}" Stretch="Fill"></Image>
                    </Grid>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="    Refused" Width="160">
                <ScrollViewer>
                    <Grid>
                        <ListBox Margin="0,30,0,0" HorizontalAlignment="Center" ItemsSource="{Binding L_Order_Refused}" Visibility="{Binding FlagItem[2]}"
                          SelectedItem="{Binding SelectedItem,Mode=OneWayToSource}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:OrderCard
                            Image="{Binding Path=Image}"
                            VendorName="{Binding Path=VendorName}"
                            ProductName="{Binding Path=ProductName}"
                            BrandName="{Binding Path=BrandName}"
                            Quantity="{Binding Path=Quantity}"
                            PriceDisc="{Binding Path=PriceDisc}"
                            PriceOrg="{Binding Path=PriceOrg}"
                            TotalPrice="{Binding Path=TotalPrice}"
                            Status="{Binding Path=Status}"
                            Date="{Binding Path=Date}">
                                    </uc:OrderCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListBox>
                        <Image Height="200" Width="200" Source="{Binding Image}" Visibility="{Binding FlagImage3}" Stretch="Fill"></Image>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="   Delivered" Width="160">
                <ScrollViewer>
                    <Grid>
                        <ListBox Margin="0,30,0,0" HorizontalAlignment="Center" ItemsSource="{Binding L_Order_Delivered}" Visibility="{Binding FlagItem4}"
                          SelectedItem="{Binding SelectedItem,Mode=OneWayToSource}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:OrderCard
                            Image="{Binding Path=Image}"
                            VendorName="{Binding Path=VendorName}"
                            ProductName="{Binding Path=ProductName}"
                            BrandName="{Binding Path=BrandName}"
                            Quantity="{Binding Path=Quantity}"
                            PriceDisc="{Binding Path=PriceDisc}"
                            PriceOrg="{Binding Path=PriceOrg}"
                            TotalPrice="{Binding Path=TotalPrice}"
                            Status="{Binding Path=Status}"
                            Date="{Binding Path=Date}">
                                    </uc:OrderCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListBox>
                        <Image Height="200" Width="200" Source="{Binding Image}" Visibility="{Binding FlagImage3}" Stretch="Fill"></Image>
                    </Grid>
                </ScrollViewer>
            </TabItem>
            <TabItem Header="   Canceled" Width="160">
                <ScrollViewer>
                    <Grid>
                        <ListBox Margin="0,30,0,0" HorizontalAlignment="Center" ItemsSource="{Binding L_Order_Canceled}" 
                          SelectedItem="{Binding SelectedItem,Mode=OneWayToSource}">
                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"></StackPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <uc:OrderCard
                            Image="{Binding Path=Image}"
                            VendorName="{Binding Path=VendorName}"
                            ProductName="{Binding Path=ProductName}"
                            BrandName="{Binding Path=BrandName}"
                            Quantity="{Binding Path=Quantity}"
                            PriceDisc="{Binding Path=PriceDisc}"
                            PriceOrg="{Binding Path=PriceOrg}"
                            TotalPrice="{Binding Path=TotalPrice}"
                            Status="{Binding Path=Status}"
                            Date="{Binding Path=Date}">
                                    </uc:OrderCard>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ListBox>
                        <Image Height="200" Width="200" Visibility="{Binding FlagImage4}" 
                               Source="{Binding Image}" Stretch="Fill"></Image>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</ui:Page>
