                <Grid>
                    <ui:ListView Margin="0 10 0 0"
                             MaxWidth="900"
                             ItemsSource="{Binding CreatedInvoices}"
                             IsSelectionEnabled="False"
                             ScrollViewer.CanContentScroll="False">
                        <ui:ListView.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="0 10 0 5">
                                    <StackPanel Orientation="Horizontal">
                                        <ui:PersonPicture ProfilePicture="{Binding Vendor.Avatar}"
                                                      DisplayName="{Binding Vendor.Name}"
                                                      Width="30"></ui:PersonPicture>
                                        <TextBlock Text="{Binding Vendor.Name, Mode=OneTime}"
                                               Margin="10 0 0 0"
                                               VerticalAlignment="Center"
                                               FontSize="18" />
                                        <ui:AppBarButton Icon="Delete"
                                                         Label="Remove"
                                                         HorizontalAlignment="Right"
                                                         Grid.Column="2"
                                                         Margin="650 0 0 0"
                                                         CommandParameter="{Binding}"
                                                         Command="{Binding Source={StaticResource OrderPageVM}, Path=CancelInvoice}" />
                                    </StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="280" />
                                            <ColumnDefinition Width="2*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Orientation="Horizontal" Margin="40 -25 0 0">
                                            <TextBlock Text="Created At: "
                                                   VerticalAlignment="Center"
                                                   FontSize="15"
                                                   FontWeight="Light"></TextBlock>
                                            <TextBlock Text="{Binding CreatedAt}"
                                                   VerticalAlignment="Center"
                                                   FontSize="14"
                                                   FontWeight="Light"></TextBlock>
                                        </StackPanel>

                                        <StackPanel Orientation="Horizontal" Margin="30 5 0 0"
                                                Grid.Column="2"
                                                HorizontalAlignment="Center">
                                            <TextBlock Text="Total: "
                                                       FontSize="18"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Light"></TextBlock>
                                            <TextBlock Text="{Binding Value, StringFormat=C, ConverterCulture=vi-VN}"
                                                       Margin="5 0 0 0"
                                                   FontWeight="Bold"
                                                   VerticalAlignment="Center"
                                                   FontSize="22"
                                                   Foreground="{DynamicResource SystemControlHighlightAccentBrush}"></TextBlock>
                                        </StackPanel>

                                    </Grid>



                                    <StackPanel>
                                        <Label Content="Products" Margin="40 -10 0 0"
                                               FontSize="18"
                                           FontWeight="Light" />
                                        <ItemsControl ItemsSource="{Binding InvoiceDetails}"
                                                  Width="800"
                                                  Margin="40 0 0 0"
                                                  HorizontalAlignment="Left">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="Gainsboro"
                                                        BorderThickness="0,2,0,0">
                                                        <StackPanel Orientation="Horizontal"
                                                               Margin="0,10">
                                                            <Image Source="{Binding Product.Image}"
                                                               Stretch="UniformToFill"
                                                               Width="80"
                                                               Height="80"
                                                               VerticalAlignment="Center" />
                                                            <TextBlock Text="{Binding Product.Name}"
                                                                   TextWrapping="Wrap"
                                                                   Width="250"
                                                                   Margin="10,0,5,0"
                                                                   VerticalAlignment="Center" />

                                                            <TextBlock Text="{Binding Product.Price, StringFormat=C, ConverterCulture=vi-VN}"
                                                                   VerticalAlignment="Center" Margin="0 0 0 0"
                                                                   FontSize="20"
                                                                   TextAlignment="Center"
                                                                   Width="150" />
                                                            <Label VerticalAlignment="Center"
                                                               Width="20">X</Label>
                                                            <ui:PersonPicture Margin="0 0 0 0"
                                                                          Initials="{Binding Quantity}"
                                                                          Width="30"></ui:PersonPicture>

                                                            <TextBlock Text="{Binding Cost, StringFormat=C, ConverterCulture=vi-VN}"
                                                                   VerticalAlignment="Center" Margin="100 0 0 0"
                                                                   TextAlignment="Center"
                                                                   FontSize="20"
                                                                   Width="150" />
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </StackPanel>

                                </StackPanel>
                            </DataTemplate>
                        </ui:ListView.ItemTemplate>

