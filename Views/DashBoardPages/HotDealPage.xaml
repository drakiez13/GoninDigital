<Page x:Class="GoninDigital.Views.DashBoardPages.HotDealPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource OrderPageVM}"
      Title="HotDealPage">

    <Grid>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="230"/>
            </Grid.RowDefinitions>
            <Grid Background="{StaticResource SystemControlBackgroundChromeMediumBrush}"
                  Margin="10 30 10 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="200"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Label Grid.Row="0" Content="Tên cửa hàng" Margin="20,0,0,0"></Label>
                    <Image Source="{Binding ProductImage}"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Left"/>
                </Grid>
                <Grid Grid.Column="1"
                  Margin="0 20 0 40 ">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <StackPanel Margin="0 0 0 20">
                        <TextBlock Text="Tên sản phẩm"
                                   TextWrapping="Wrap"
                                   FontSize="22"
                                   FontWeight="Bold"/>
                        <Label Content="Nhãn hiệu"/>
                    </StackPanel>
                    <Grid Grid.Row="1"
                          Margin="0 0 0 10">
                        <StackPanel Orientation="Horizontal">
                            <Label Content="Số lượng: "></Label>
                            <TextBlock Text="0"></TextBlock>
                        </StackPanel>
                    </Grid>
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal">
                        <TextBlock Text="100000" 
                           FontSize="20"
                           FontWeight="Bold"
                                   Width="100"/>
                        <TextBlock >
                            <Run TextDecorations="Strikethrough" Text="200000" FontSize="20"></Run>
                        </TextBlock>
                    </StackPanel>
                </Grid>
                <StackPanel Grid.Column="2">
                    <Label Content="Tình trạng" Margin="20,0,0,0"></Label>
                    <Button x:Name="buy"
                        Content="Buy Again"
                        Width="150"
                        Margin="0 30 30 0"
                        Background="{DynamicResource SystemAccentColorDark1Brush}"
                        HorizontalAlignment="Right"/>
                    <Button x:Name="addCart"
                        Content="Add To Cart"
                        Width="150"
                        Margin="0 30 30 0"
                        Background="{DynamicResource SystemAccentColorDark1Brush}"
                        HorizontalAlignment="Right"
                        Command="{Binding AddtoCartCommand}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Page>
