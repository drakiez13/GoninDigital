<Page x:Class="GoninDigital.Views.DashBoardPages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d" 
      d:DesignWidth="1000"
      Background="{DynamicResource AppBackgroundBrush}"
      Title="HomePage">
    <ScrollViewer>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type uc:ProductCard}">
                        <Setter Property="Margin" Value="30,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <uc:ProductCard></uc:ProductCard>
                <uc:ProductCard></uc:ProductCard>
                <uc:ProductCard></uc:ProductCard>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type uc:ProductCard}">
                        <Setter Property="Margin" Value="30,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <uc:ProductCard></uc:ProductCard>
                <uc:ProductCard></uc:ProductCard>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="10,10,10,10">
                <StackPanel.Resources>
                    <Style TargetType="{x:Type uc:ProductCard}">
                        <Setter Property="Margin" Value="30,0,0,0"/>
                    </Style>
                </StackPanel.Resources>
                <uc:ProductCard></uc:ProductCard>
                <uc:ProductCard></uc:ProductCard>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>

</Page>
