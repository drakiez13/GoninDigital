<Page x:Class="GoninDigital.Views.DashBoardPages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d" 
      d:DesignWidth="1000"
      DataContext="{StaticResource HomePageVM}"
      Background="{DynamicResource AppBackgroundBrush}"
      Title="HomePage">
    <ScrollViewer>
        <TextBox Text="{Binding a.Brand.Name, Mode=TwoWay}"></TextBox>
    </ScrollViewer>

</Page>
