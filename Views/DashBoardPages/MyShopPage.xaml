<Page x:Class="GoninDigital.Views.DashBoardPages.MyShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d" 
      d:DesignWidth="1000"
      DataContext="{StaticResource MyShopPageVM}"
      Background="{DynamicResource AppBackgroundBrush}"
      Title="MyShop">

    <ScrollViewer>
        <StackPanel Orientation="Vertical" Margin="0 0 0 50 ">
            <Grid VerticalAlignment="Top">
                <Grid Height="450" VerticalAlignment="Top">
                    <Image Source=" https://br.atsit.in/vi/wp-content/uploads/2021/05/apple-co-ke-hoach-mo-them-apple-store-vi-covid-anh-huong-den-ban-le-tren-toan-the-gioi.jpg"
                           Stretch="UniformToFill"></Image>
                    <Label
                                Margin="20 20 0 20"
                                FontSize="22"
                                FontWeight="Bold">My Shop</Label>
                </Grid>
                <Grid Margin="0 405 0 0">
                <StackPanel Orientation="Vertical" >
                    <ui:PersonPicture 
                            DisplayName="Betsy Sherman"
                            ProfilePicture="https://c4.wallpaperflare.com/wallpaper/471/516/832/apple-logo-white-background-wallpaper-preview.jpg"
                            Initials="Shop" 
                            />
                    <Label 
                            Content="Apple" Foreground="Black"
                            FontSize="22" FontWeight="Bold"
                            HorizontalAlignment="Center"/>
                </StackPanel>
                </Grid>
            </Grid>

            <uc:ShopProduct Margin="0 50 0 0" ProductList="{Biding prodictList}"></uc:ShopProduct>
           
        </StackPanel>
    </ScrollViewer>
</Page>
