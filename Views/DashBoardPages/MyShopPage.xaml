<Page x:Class="GoninDigital.Views.DashBoardPages.MyShopPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d" 
      d:DesignWidth="1000"
      DataContext="{StaticResource MyShopPageVM}"
      Background="{DynamicResource AppBackgroundBrush}"
      Title="MyShop">

    <ScrollViewer>
        <StackPanel Orientation="Vertical" Margin="0 0 0 50 ">
            <Grid VerticalAlignment="Top">
                <Grid Height="450" VerticalAlignment="Top">
                    <Image Source="{Binding Cover}"
                           Stretch="UniformToFill"></Image>
                    <Label
                                Margin="20 20 0 20"
                                FontSize="22"
                                FontWeight="Bold">My Shop</Label>
                </Grid>
                <Grid Margin="0 405 0 0">
                <StackPanel Orientation="Vertical" >
                    <ui:PersonPicture 
                            DisplayName="Betsy Sherman"
                            ProfilePicture="{Binding Avatar}"
                            Initials="Shop" 
                            />
                    <Label 
                            Content="{Binding NameShop}" Foreground="Black"
                            FontSize="25" FontWeight="Bold"
                            HorizontalAlignment="Center"/>
                </StackPanel>
                </Grid>
            </Grid>
            <StackPanel HorizontalAlignment="Right" >
                <StackPanel Orientation="Horizontal">
                    <Label Content="Phone: "></Label>
                    <Label Content="{Binding Phone}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Address: "></Label>
                    <Label Content="{Binding Address}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Sold: "></Label>
                    <Label Content="sold"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Label Content="Remain: "></Label>
                    <Label Content="Remain"/>
                </StackPanel>
            </StackPanel>
            <Label Margin="10 0 0 0" FontWeight="Bold" FontSize="18">Best seller</Label>
            <uc:ShopProduct Margin="0 10 0 0" ProductList="{Binding ProductList}"></uc:ShopProduct>
           
        </StackPanel>
    </ScrollViewer>
</Page>
