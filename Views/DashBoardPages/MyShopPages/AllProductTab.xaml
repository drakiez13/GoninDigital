<Page x:Class="GoninDigital.Views.DashBoardPages.MyShopPages.AllProductTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages.MyShopPages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d"
      d:DesignWidth="1000"
      DataContext="{StaticResource MyShopPageVM}"
      Title="AllProductTab">

    <StackPanel Margin="20 0">
        <ItemsControl ItemsSource="{Binding Products}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>

                    <uc:ProductCard Margin="10 10 10 10"
                                    ProductInfo="{Binding}"
                                    Content="">

                    </uc:ProductCard>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </StackPanel>
</Page>
