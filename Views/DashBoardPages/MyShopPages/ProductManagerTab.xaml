<Page x:Class="GoninDigital.Views.DashBoardPages.MyShopPages.ProductManagerTab"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.DashBoardPages.MyShopPages"
      xmlns:ui="http://schemas.modernwpf.com/2019"
      
      xmlns:uc="clr-namespace:GoninDigital.SharedControl"
      mc:Ignorable="d"
      d:DesignWidth="1000"
      DataContext="{StaticResource MyShopPageVM}"
      Title="ProductManagerTab"
      >

    <StackPanel Margin="20 10 20 0">
        <ui:CommandBar>
            <ui:AppBarButton Icon="Add"
                             Label="Add" />
            <ui:AppBarButton Icon="Edit"
                             Label="Edit"
                             Command="{Binding EditCommand}" />
            <ui:AppBarButton Icon="Remove"
                             Label="Remove"
                             Command="{Binding RemoveCommand}" />
        </ui:CommandBar>
        <uc:ProductCardManaged />
    </StackPanel>
</Page>
