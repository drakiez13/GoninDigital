<Window x:Class="GoninDigital.Views.SplashScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoninDigital.Views"
        mc:Ignorable="d"
        xmlns:threadedUi="clr-namespace:ModernWpf.Demo.ThreadedUI"
        Title="SplashScreen" Height="450" Width="800">
    <Grid>
        <threadedUi:ThreadedVisualHost Grid.Row="4"
                                           HorizontalAlignment="Center"
                                           VerticalAlignment="Center"
                                           x:Name="ProgressControlHost"
                                           Visibility="Visible"
                                           ChildType="{x:Type threadedUi:ThreadedProgressRing}"
                                           ChildChanged="ProgressControlHost_ChildChanged"/>
    </Grid>
</Window>
