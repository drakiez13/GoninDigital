<Page x:Class="GoninDigital.Views.SharedPages.ProductPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.SharedPages"
      mc:Ignorable="d" 
      DataContext="{StaticResource ProductPageVM}"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="500"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="0" Source="{Binding Image, ElementName=ProductCard}"></Image>
        <ui:SimpleStackPanel Grid.Column="1" Margin="0,50,0,0">
            <Label x:Name="lb_nameP"  Content="{Binding NameP }" Height="50" FontWeight="Bold"></Label>
            <StackPanel x:Name="sp_typeP" Orientation="Horizontal">
                <Label Content="Type" Width="165"></Label>
                <Label x:Name="lb_typeP"  Content="{Binding TypeP }" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_DescP" Orientation="Horizontal">
                <Label Content="Description" Width="165"></Label>
                <Label x:Name="lb_DescP"  Content="{Binding DescP }" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_BrandP" Orientation="Horizontal">
                <Label Content="Brand" Width="165"></Label>
                <Label x:Name="lb_BrandP"  Content="{Binding NameB }" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_NameV" Orientation="Horizontal">
            <Label Content="Vendor" Width="165"></Label>
                <Label x:Name="lb_NameV"  Content="{Binding NameV }" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_AddrV" Orientation="Horizontal">
                <Label Content="Address" Width="165"></Label>
                <Label x:Name="lb_AddrV"  Content="{Binding AddrV }" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_discP" Orientation="Horizontal">
                <Label Content="Discount" Width="165"></Label>
                <Label x:Name="lb_discP"  Content="{Binding DiscP}" Height="50"></Label>
            </StackPanel>
            <StackPanel x:Name="sp_Price" Orientation="Horizontal">
                <Label Content="Price" Width="165"></Label>
                <Label Content="{Binding PriceP_now}" Width="100"></Label>
                <Label>
                    <TextBlock>
                    <Run TextDecorations="Strikethrough" Text="{Binding PriceP_origin}"></Run>
                    </TextBlock>
                </Label>
            </StackPanel>
        </ui:SimpleStackPanel>
    </Grid>
</Page>
