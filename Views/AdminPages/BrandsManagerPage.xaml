<ui:Page 
        x:Class="GoninDigital.Views.AdminPages.BrandsManagerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:local="clr-namespace:GoninDigital.Views.AdminPages"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800"
        DataContext="{StaticResource BrandsVM}"
        Title="BrandPage">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Orientation="Horizontal">
                <ui:AutoSuggestBox QueryIcon="Find" 
                                   AutomationProperties.Name="Search"
                                   Width="300"
                                   HorizontalAlignment="Left"
                                   Margin="20"
                                   Text="{Binding SearchName, Mode=TwoWay}"
                                   TextChanged="AutoSuggestBox_TextChanged"
                                   QuerySubmitted="AutoSuggestBox_QuerySubmitted"/>
                <Button Content="New User" 
                        Margin="5"
                        Command="{Binding AddCommand}"/>
                <Button Content="Update" 
                        Margin="5"
                        Command="{Binding UpdateCommand}"/>
                <Button Content="Delete" 
                        Margin="5"
                        Command="{Binding DeleteCommand}"/>
            </StackPanel>
        </Grid>
        <DataGrid x:Name="dataGrid"
                  Grid.Row="1"
                  ItemsSource="{Binding List}"
                  SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="Horizontal"
                  RowDetailsVisibilityMode="Collapsed"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True" SelectionMode="Single"
                  >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Id"
                    Width="50"
                    Binding="{Binding Id}"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Name"
                    Width="*"
                    Binding="{Binding Name}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</ui:Page>