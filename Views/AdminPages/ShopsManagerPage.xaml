<Page x:Class="GoninDigital.Views.AdminPages.ShopsManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GoninDigital.Views.AdminPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{StaticResource ManageShopPageVM}"
      Title="ShopPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="300"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <StackPanel Orientation="Horizontal">
                <ui:AutoSuggestBox QueryIcon="Find" 
                                   AutomationProperties.Name="Search"
                                   Width="300"
                                   HorizontalAlignment="Left"
                                   Margin="20"/>
                <Button Content="Delete" 
                        Margin="5"
                        Command="{Binding DeleteCommand}"/>
            </StackPanel>
        </Grid>
        <DataGrid x:Name="dataGrid"
                  Margin="10,0,0,10"
                  ItemsSource="{Binding L_Shop}"
                  SelectedItem="{Binding SelectedItem, Mode=OneWayToSource}"
                  Grid.Row="1"
                  HorizontalScrollBarVisibility="Auto"
                  VerticalScrollBarVisibility="Auto"
                  HeadersVisibility="Column"
                  GridLinesVisibility="All"
                  RowDetailsVisibilityMode="Collapsed"
                  VirtualizingPanel.VirtualizationMode="Recycling"
                  VirtualizingPanel.IsVirtualizingWhenGrouping="True" 
                  AutoGenerateColumns="False"  >
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="Id"
                    MinWidth="40"
                    Width="*"
                    Binding="{Binding Id}" 
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Vendor Name"
                    MinWidth="100"
                    Width="2*"
                    Binding="{Binding Name}"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Owner Name"
                    MinWidth="100"
                    Width="*"
                    Binding="{Binding Owner.UserName}"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Description"
                    MinWidth="100"
                    Binding="{Binding Description}"
                    Width="3*"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Address"
                    MinWidth="70"
                    Width="3*"
                    Binding="{Binding Address}"
                    IsReadOnly="True"/>
                <DataGridTextColumn
                    Header="Phone Number"
                    MinWidth="120"
                    Width="*"
                    Binding="{Binding Phone}"
                    IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="800"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Request" Margin="30,5,0,0"
               FontSize="20"
               FontWeight="Bold"
                   />
            <StackPanel Grid.Column="1" Orientation="Horizontal"
                        >
                <ui:AppBarButton 
                Visibility="{Binding SelectedVendors.Count,
                           Converter={StaticResource ListCountToVisibility},
                           ConverterParameter=True}"
                                 Icon="Delete"
                                 Label="Remove"
                                 Command="{Binding RemoveSelectionsCommand}"
                                />

                <ui:AppBarButton 
                Visibility="{Binding SelectedVendors.Count,
                           Converter={StaticResource ListCountToVisibility},
                           ConverterParameter=True}"
                                 Icon="Shop"
                                 Label="Accept"
                                 Command="{Binding AcceptSelectionsCommand}"/>
            </StackPanel>
        </Grid>


        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="20,15,0,0">
            <ui:ListView ItemsSource="{Binding L_ShopNew}"
                         x:Name="lvShopPage"
                         SelectionChanged="ListView_SelectionChanged"
                                 SelectionMode="Multiple"
                                 HorizontalAlignment="Left"
                         Height="150"
                                 VirtualizingPanel.IsVirtualizing="True"
                                 VirtualizingPanel.IsVirtualizingWhenGrouping="True"
                         >


                <ui:ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical"></StackPanel>

                    </ItemsPanelTemplate>
                </ui:ListView.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel HorizontalAlignment="Stretch" Height="60" >
                            <Image Source="{Binding Avatar}"
                                           Stretch="UniformToFill"
                                           Width="40"
                                           Height="30" 
                                           Margin="0 0 0 0"
                                           VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Name}"
                                               TextWrapping="Wrap"
                                               Width="100"
                                               Margin="20,10,0,10"
                                               VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Description}"
                                               TextWrapping="Wrap"
                                               Width="170"
                                               Margin="10,10,0,10"
                                               VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Address}"
                                               TextWrapping="Wrap"
                                               Width="300"
                                               Margin="10,10,0,10"
                                               VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Phone}"
                                               TextWrapping="Wrap"
                                               Width="150"
                                               Margin="10,10,0,10"
                                               VerticalAlignment="Center" />
                            <ui:CommandBar VerticalAlignment="Center"
                                                   Background="Transparent"
                                                   Width="auto"
                                                   DockPanel.Dock="Right">
                                <ui:CommandBar.SecondaryCommands>
                                    <ui:AppBarButton Icon="Delete"
                                                             Label="Remove"
                                                             CommandParameter="{Binding}"
                                                             Command="{Binding Source={StaticResource ManageShopPageVM}, Path=RemoveCommand}"></ui:AppBarButton>
                                    <ui:AppBarButton Icon="Library"
                                                             Label="Show Vendor"
                                                             CommandParameter="{Binding}"
                                                             Command="{Binding Source={StaticResource ManageShopPageVM}, Path=ShowVendorCommand}"></ui:AppBarButton>
                                    <ui:AppBarButton Icon="Shop"
                                                             Label="Accept"
                                                             CommandParameter="{Binding}"
                                                             Command="{Binding Source={StaticResource ManageShopPageVM}, Path=AcceptCommand}"></ui:AppBarButton>
                                </ui:CommandBar.SecondaryCommands>
                            </ui:CommandBar>
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ui:ListView>
        </StackPanel>
    </Grid>
</Page>
